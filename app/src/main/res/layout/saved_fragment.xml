<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_background">

    <TextView
        android:id="@+id/title"
        style="@style/WelcomeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="25dp"
        android:text="@string/achieve_skills"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_of_header"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16sp"
        android:background="@color/grey_stroke_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/InfoTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16sp"
        android:text="@string/tips_text_subtitle"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_of_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skillsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:layout_marginTop="18sp"
        android:layout_marginEnd="22sp"
        android:elevation="10dp"
        android:background="@drawable/frame_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle">

        <TextView
            android:id="@+id/ok"
            style="@style/InfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16sp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:text="@string/verified_text"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/puzzle"
            style="@style/InfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16sp"
            android:text="@string/puzzle_piece"
            android:gravity="center"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ok"
            app:drawableStartCompat="@drawable/puzzle"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/speech_bubble"
            style="@style/InfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16sp"
            android:text="@string/speech_bubble"
            android:gravity="center"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/puzzle"
            app:drawableStartCompat="@drawable/speech_bubble"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/document"
            style="@style/InfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/document_tips"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/document"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speech_bubble"
            tools:ignore="RtlCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skillslearninglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22sp"
        android:elevation="10dp"
        android:background="@drawable/frame_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillsLayout">

        <TextView
            android:id="@+id/skills_pen"
            style="@style/InfoTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAlignment="textStart"
            android:drawablePadding="5dp"
            android:text="@string/two_pen_text"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/edit__1_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>