<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WelcomeTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="ProfileTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="SubTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_light</item>
        <item name="android:textSize">14sp</item>
        <item name="color">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="SpecialInfoTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_light</item>
        <item name="android:textSize">14sp</item>
        <item name="color">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/green_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BoldTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
    </style>

    <style name="CustomButtonOutline">
        <item name="android:textColor">@color/outline_button</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/barlow_bold</item>
        <item name="android:backgroundTint">@color/outline_button</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavBarStyle">
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutlinedBoxEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="font">@font/barlow_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="maxLines">1</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>