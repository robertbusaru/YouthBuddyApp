<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WelcomeTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="SubTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_light</item>
        <item name="android:textSize">14sp</item>
        <item name="color">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="SpecialInfoTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/barlow_light</item>
        <item name="android:textSize">14sp</item>
        <item name="color">@color/black</item>
        <item name="lineHeight">17sp</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/green_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>